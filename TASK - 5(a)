import time

def greet():
    print("Hello! I'm ChatPy ğŸ¤–. How can I help you today?")
    print("Type 'bye' to exit.")

def get_response(user_input):
    user_input = user_input.lower()

    if 'hello' in user_input or 'hi' in user_input:
        return "Hi there! ğŸ‘‹"
    elif 'how are you' in user_input:
        return "I'm just a bot, but I'm doing great! ğŸ˜Š"
    elif 'your name' in user_input:
        return "I'm ChatPy, your friendly chatbot! ğŸ¤–"
    elif 'time' in user_input:
        return f"The current time is {time.strftime('%I:%M %p')}"
    elif 'date' in user_input:
        return f"Today's date is {time.strftime('%B %d, %Y')}"
    elif 'help' in user_input:
        return "I can answer simple questions like greetings, time, date, or tell you about myself."
    elif 'bye' in user_input:
        return "Goodbye! Have a great day! ğŸ‘‹"
    else:
        return "Sorry, I didn't understand that. Can you rephrase?"

def chat():
    greet()
    while True:
        user_input = input("You: ")
        if user_input.lower() == 'bye':
            print("ChatPy: Goodbye! ğŸ‘‹")
            break
        response = get_response(user_input)
        print(f"ChatPy: {response}")

chat()
